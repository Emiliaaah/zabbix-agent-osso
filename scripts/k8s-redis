#!/bin/sh
# [This file is part of the zabbix-agent-osso package]
# REQUIRES: kubectl
#
#UserParameter=k8s-redis.discovery, sudo /etc/zabbix/scripts/k8s-redis --discover
#UserParameter=k8s-redis.values[*], sudo /etc/zabbix/scripts/k8s-redis "$1" "$2" "$3" "$4"
#

get_contexts() {
    kubectl config get-contexts -oname
}

get_namespaces() {
    kubectl get namespace -l redis-monitoring=true \
        --context $1 --no-headers 2>/dev/null \
    | sed -e 's/namespace\///' 
}

get_configmaps() {
    kubectl -n $1 --context $2 get cm -o name \
    | sed -e 's/^configmap\///;/^status-/!d'
}

make_json() {
    echo '{"{#CONTEXT}":"'$1'","{#NAMESPACE}":"'$2'","{#POD}":"'$3'"}'
}

if [ "$1" = "--discover" ]; then
    for context in $(get_contexts); do 
        for namespace in $(get_namespaces "$context"); do
            for name in $(get_configmaps "$namespace" "$context"); do
                make_json "$context" "$namespace" "${name#status-}"
            done
        done
    done | jq -sc
    exit 0
fi

exec kubectl --context "$1" -n "$2" get cm "status-$3" -o jsonpath='{.data.status}'
