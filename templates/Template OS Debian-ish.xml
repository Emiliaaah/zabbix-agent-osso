<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2021-02-11T08:33:23Z</date>
    <groups>
        <group>
            <name>TEMPLATES</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template OS Debian-ish</template>
            <name>Template OS Debian-ish</name>
            <templates>
                <template>
                    <name>Template OS Linux</name>
                </template>
                <template>
                    <name>Template OSSO-common</name>
                </template>
            </templates>
            <groups>
                <group>
                    <name>TEMPLATES</name>
                </group>
            </groups>
            <items>
                <item>
                    <name>Check if rsyslog is running</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>proc.num[rsyslogd]</key>
                    <history>7d</history>
                    <trends>30d</trends>
                    <applications>
                        <application>
                            <name>Processes</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>Check if syslog-ng is running</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>proc.num[syslog-ng]</key>
                    <history>7d</history>
                    <trends>30d</trends>
                    <applications>
                        <application>
                            <name>Processes</name>
                        </application>
                    </applications>
                </item>
            </items>
        </template>
    </templates>
    <triggers>
        <trigger>
            <expression>{Template OS Debian-ish:proc.num[rsyslogd].last()}=0 and {Template OS Debian-ish:proc.num[syslog-ng].last()}=0</expression>
            <name>rsyslog | syslog-ng are not running on {HOST.NAME}</name>
            <priority>HIGH</priority>
        </trigger>
    </triggers>
</zabbix_export>
