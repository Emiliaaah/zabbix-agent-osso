                    </applications>
                </item>
                <item>
                    <name>Host has external IPv4 address</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>net.has_ext_ip4</key>
                    <delay>5m</delay>
                    <history>1w</history>
                    <trends>30d</trends>
                    <applications>
                        <application>
                            <name>Network interfaces</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>BOOL_TO_DECIMAL</type>
                            <parameters>
                                <parameter/>
