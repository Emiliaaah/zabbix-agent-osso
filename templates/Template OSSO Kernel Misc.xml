                </item>
                <item>
                    <name>DMI bios</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system.dmi.bios</key>
                    <delay>12h</delay>
                    <history>15d</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
