                <item>
                    <name>CPU model</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system.hw.cpu[0,model]</key>
                    <delay>12h</delay>
                    <history>15d</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
