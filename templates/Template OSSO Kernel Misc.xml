                            </parameters>
                        </step>
                    </preprocessing>
                    <request_method>POST</request_method>
                </item>
                <item>
                    <name>Host stats TCP segments retransmitted</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>net.tcpretranssegs</key>
                    <history>1w</history>
                    <trends>30d</trends>
                    <applications>
                        <application>
                            <name>Network interfaces</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                </item>
