<zabbix_export>
    <version>5.2</version>
    <date>2021-04-27T10:51:19Z</date>
    <groups>
        <group>
            <name>TEMPLATES</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template OSSO Kernel Misc</template>
            <name>Template OSSO Kernel Misc</name>
            <groups>
                <group>
                    <name>TEMPLATES</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>CPU</name>
                </application>
                <application>
                    <name>DMI</name>
                </application>
                <application>
                    <name>Firewall</name>
                </application>
                <application>
