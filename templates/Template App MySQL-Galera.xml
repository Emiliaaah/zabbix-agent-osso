                            <dependencies>
                                <dependency>
                                    <name>MySQL is down on {HOST.NAME}</name>
                                    <expression>{Template App MySQL:mysql.ping.last(0)}=0</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                        <trigger>
                            <expression>{last(#1)}&lt;&gt;4 and
{last(#2)}&lt;&gt;4 and
{last(#3)}&lt;&gt;4 and
{last(#4)}&lt;&gt;4 and
{last(#5)}&lt;&gt;4 and
{last(#6)}&lt;&gt;4 and
{last(#7)}&lt;&gt;4 and
{last(#8)}&lt;&gt;4 and
{last(#9)}&lt;&gt;4 and
{last(#10)}&lt;&gt;4</expression>
                            <name>Cluster node {HOST.NAME} is not synced with Galera cluster - 5 minutes</name>
                            <priority>DISASTER</priority>
                            <dependencies>
                                <dependency>
                                    <name>MySQL is down on {HOST.NAME}</name>
                                    <expression>{Template App MySQL:mysql.ping.last(0)}=0</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                    </triggers>
