                <group>
                    <name>TEMPLATES</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Galera</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Check cluster size</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>mysql.status_galera[wsrep_cluster_size]</key>
                    <delay>30s</delay>
                    <history>1w</history>
                    <applications>
                        <application>
                            <name>Galera</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                    <triggers>
                        <trigger>
                            <expression>{last()}&lt;&gt;{$GALERA_NODECOUNT}</expression>
                            <name>Cluster size is not {$GALERA_NODECOUNT} on {HOST.NAME}</name>
                            <priority>DISASTER</priority>
                            <description>Cluster size is not {$GALERA_NODECOUNT}. Either a node is missing from the cluster or a node has been added.</description>
                            <dependencies>
                                <dependency>
                                    <name>MySQL is down on {HOST.NAME}</name>
                                    <expression>{Template App MySQL:mysql.ping.last(0)}=0</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Status of cluster component</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>mysql.status_galera[wsrep_cluster_status]</key>
                    <delay>30s</delay>
                    <history>1w</history>
                    <trends>0</trends>
                    <value_type>CHAR</value_type>
                    <applications>
                        <application>
                            <name>Galera</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                    <triggers>
                        <trigger>
                            <expression>{strlen()}&lt;&gt;0 and
{str(Primary)}=0</expression>
                            <name>Cluster status of node {HOST.NAME} not Primary</name>
                            <priority>AVERAGE</priority>
                            <description>Partition or possibly a split-brain occurred (if strlen()=0 then it probably has-v2-conf)</description>
                            <dependencies>
                                <dependency>
                                    <name>MySQL is down on {HOST.NAME}</name>
                                    <expression>{Template App MySQL:mysql.ping.last(0)}=0</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Connection with cluster</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>mysql.status_galera[wsrep_connected]</key>
                    <delay>30s</delay>
                    <history>1w</history>
                    <trends>0</trends>
                    <value_type>CHAR</value_type>
                    <applications>
                        <application>
                            <name>Galera</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                    <triggers>
                        <trigger>
                            <expression>{strlen()}&lt;&gt;0 and {str(ON,#2)}=0</expression>
                            <name>{HOST.NAME} is no longer connected to the cluster</name>
                            <priority>HIGH</priority>
                            <description>Node is not connected to the cluster (if strlen()=0 then it probably has-v2-conf). Check error logs</description>
                            <dependencies>
                                <dependency>
                                    <name>MySQL is down on {HOST.NAME}</name>
                                    <expression>{Template App MySQL:mysql.ping.last(0)}=0</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                    </triggers>
                </item>
